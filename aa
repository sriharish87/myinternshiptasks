

# Go to your Drupal folder
cd /var/www/drupal

# Make sure sites/default exists
sudo mkdir -p sites/default/files

# Download the missing default.settings.php if not present
if [ ! -f sites/default/default.settings.php ]; then
  sudo wget -O sites/default/default.settings.php https://raw.githubusercontent.com/drupal/drupal/11.x/sites/default/default.settings.php
fi

# Copy to settings.php
sudo cp sites/default/default.settings.php sites/default/settings.php

# Fix ownership (apache is your webserver user in Rocky Linux/CentOS)
sudo chown -R apache:apache sites/default
sudo chmod -R 755 sites/default
sudo chmod 664 sites/default/settings.php
sudo chmod -R 775 sites/default/files
